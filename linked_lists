#include "main.h"
/**
 * path_LL - creates a linked list of directories in PATH
 * Return:head of the linked list
 */
Node *path_LL()
{
	Node *new_node;
	Node *head;
	Node *current_node;
	char *token;
	char *path;

	head = NULL;
	current_node = NULL;
	path = _getenv("PATH");

	if (path == NULL)
	{
		return (NULL);
	}

	token = strtok(path, ";");
	while (token != NULL)
	{
		new_node = (Node *)malloc(sizeof(Node));
		if (new_node == NULL)
		{
			return (NULL);
		}
		new_node->dir = strdup(token);
		new_node->next = NULL;
		if (head == NULL)
		{
			head = new_node;
			current_node = new_node;
		}
		else
		{
			current_node->next = new_node;
			current_node = new_node;
		}
		token = strtok(NULL, ";");
	}
	return (head);
}
