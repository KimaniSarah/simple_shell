#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>

void shell_exit(char *arg) {
	if (arg == NULL) {
		// No argument provided, exit with default status 0
		exit(0);
	} else {
		// Argument provided, try to convert it to an integer
		char *endptr;
		int status = strtol(arg, &endptr, 10);

		// Check if the conversion was successful and there are no remaining characters
		if (*endptr == '\0') {
			exit(status);
		} else {
			printf("Invalid argument: %s. Status must be an integer.\n", arg);
		}
	}
}
